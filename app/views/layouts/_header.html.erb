<header class="p-0 m-0">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- タイトル --!>
            <%= link_to "Movie App", "/" , class: "text-decoration-none text-light" %>

            <form method="post" class="d-flex" role="search" action="/search">
                <!-- inputのnameで指定した単語をコントローラーで受け取る --!>
                <input class="form-control me-2" name="text" type="search" placeholder="タイトルを入力" aria-label="Search">
                <button class="btn btn-outline-danger" type="submit">Search</button>
            </form>
            <div class="d-flex">
                <!-- アカウントメニュー --!>
                <div class="nav-item dropdown align-items-center justify-content-center my-1">
                    <a class="nav-link dropdown-toggle my-0" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-user fa-lg" style="color: #f5f5f5;"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <% if user_signed_in? %>
                            <li>
                                <%= link_to "マイリスト", favorites_list_path, class: "text-decoration-none dropdown-item" %>
                            </li>
                        <% end %>
                        <li>
                            <% if user_signed_in? %>
                                <%= link_to "ログアウト", logout_path, class: "text-decoration-none dropdown-item" %> 
                            <% else %>
                                <%= link_to "ログイン", new_user_session_path, class: "text-decoration-none dropdown-item" %> 
                            <% end %>
                        </li>
                        <li>
                            <% if user_signed_in? %>
                                <%= link_to "アカウント削除", signout_path, class: "text-decoration-none dropdown-item" %> 
                            <% end %>
                        </li>
                    </ul>
                </div>

            <!-- ハンバーガーメニュー --!>
            <div class="container-fluid d-md-none">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="p-0 bg-dark text-danger">
                            <% @categories.each do |category| %>
                                <%= link_to movies_category_path(id: category['id'], name: category['name']), style: "text-decoration: none;" do %>
                                    <li class="list-unstyled text-light">
                                        <%= category['name'] %>
                                    </li>
                                <% end %>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>